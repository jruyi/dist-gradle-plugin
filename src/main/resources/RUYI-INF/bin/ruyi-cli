# -------------------------------------------------------------------------
# JRuyi CLI Client
# -------------------------------------------------------------------------

JRUYI_HOME="$( cd "$( dirname "$0" )/.." && pwd )"
PROGNAME="`basename $0`"

if [ "x$JAVA_HOME" = "x" ]; then
	JAVA="java"
else
	JAVA="$JAVA_HOME/bin/java"
fi

# Set JRuyi home dir
JAVA_OPTS="-Djruyi.home.dir=$JRUYI_HOME"

# JPDA options. Uncomment and modify as appropriate to enable remote debugging.
#JAVA_OPTS="-Xrunjdwp:transport=dt_socket,address=8010,server=y,suspend=y $JAVA_OPTS"

# Set program name
JAVA_OPTS="$JAVA_OPTS -Dprogram.name=$PROGNAME"

EXE_JAR="$JRUYI_HOME/main/jruyi-cli.jar"

"$JAVA" $JAVA_OPTS -jar "$EXE_JAR" "$@"
